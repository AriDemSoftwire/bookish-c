@{
    ViewBag.Title = "Catalogue Page";
}

<div class="jumbotron">
    <p class="lead">Here are all the books you cannot borrow:</p>
</div>

<form asp-controller="Catalogue" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<p></p>
<a href="/Catalogue/NewBook" class="btn btn-primary btn-lg">Create new book</a>
<p></p>
<table>
    <tr>
    <th>ISBN</th>
    <th>Title</th>
    <th>Author</th>
    <th>Additional info</th>
  </tr>
    @foreach (var item in Model)
    {
      <tr>
            <td>@item.isbn</td>
            <td>@item.title</td>
            <td>@item.author</td>
            <td>@Html.ActionLink("Details", "Details", new { id=item.isbn  })</td>
      </tr>
    }
</table>
