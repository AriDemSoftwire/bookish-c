@{
    ViewBag.Title = "Catalogue Page";
}

<div class="jumbotron">
    <p class="lead">Here are all the books you cannot borrow:</p>
</div>
<p></p>
<a href="/Catalogue/NewBook" class="btn btn-primary btn-lg">Create new book</a>
<p></p>
<table>
    <tr>
    <th>ISBN</th>
    <th>Title</th>
    <th>Author</th>
    <th>Available copies</th>
    <th>Additional info</th>
  </tr>
    @foreach (var item in Model)
    {
      <tr>
            <td>@item.isbn</td>
            <td>@item.title</td>
            <td>@item.author</td>
            <td>@item.totalcopies</td>
            <td>@Html.ActionLink("Details", "Details", new { id=item.isbn  })</td>
      </tr>
    }
</table>
